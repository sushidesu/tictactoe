{
  "name": "tictactoe",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "start": "NODE_ENV=\"development\" node tools/devserver.js",
    "build": "cpx public/**/* build --clean && esbuild --minify --bundle --outfile=build/index.js --define:process.env.NODE_ENV='\"production\"' src/index.tsx",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx ./src",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "typecheck": "tsc --noEmit",
    "test:integration": "concurrently \"yarn start\" \"cd e2e && yarn cypress:run\"",
    "test:integration:open": "concurrently \"yarn start\" \"cd e2e && yarn cypress:open\""
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@emotion/jest": "^11.2.0",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/addon-storyshots": "^6.3.12",
    "@storybook/addon-storyshots-puppeteer": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "concurrently": "^6.0.0",
    "cpx": "^1.5.0",
    "esbuild": "^0.8.44",
    "eslint": "^7.19.0",
    "husky": "=4",
    "jest": "^26.6.3",
    "lint-staged": ">=10",
    "prettier": "^2.2.1",
    "puppeteer": "^7.1.0",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.5.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn typecheck"
    }
  }
}
